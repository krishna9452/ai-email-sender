{
  "version": 2,
  "builds": [
    {
      "src": "server/api/*.js",
      "use": "@vercel/node",
      "config": {
        "nodeVersion": "22.x"
      }
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/generate-email",
      "dest": "server/api/generate-email.js",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/api/send-email",
      "dest": "server/api/send-email.js",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/(.*)",
      "dest": "client/$1"
    }
  ]
}